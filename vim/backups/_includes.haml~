= javascript_include_tag 'application'
= yield :js
:javascript
  $(document).ready(function(){
    $('.carousel').carousel({ interval: 0 });

    var url = '#{cookies_path}';
    var menuleft = $('#menu-left');
    var content = $('#content');

    if(#{cookies['shrink-left-menu'] || false} && menuleft){
      menuleft.find('span').toggle();
      menuleft.find('.dropdown').toggle();
    }

    $('.togglemenuleft').click(function(){
      menuleft.toggleClass('span1')
        .toggleClass('icons-only')
        .toggleClass('span2');

      content.toggleClass('span10')
        .toggleClass('span11');

      $(this).find('i')
        .toggleClass('icon-circle-arrow-right')
        .toggleClass('icon-circle-arrow-left');

      menuleft.find('span').toggle();
      menuleft.find('.dropdown').toggle();

      var t=setTimeout(function(){ 
        $.ajax(url, {type: 'PUT', url: url, data: 'shrink-left-menu' + '=' + menuleft.hasClass('span1') });
      }, 200);
    });

  });


