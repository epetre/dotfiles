class PivotalPreferencesController < ApplicationController
  before_filter :load_preference_sheet
  authorize_resource :preference_sheet

  # GET /pivotal_settings
  def edit
    puts "current user"
    puts current_user.id
  end

  # PUT /pivotal_settings
  # PUT /pivotal_settings
  def update
    respond_to do |format|
      if @preference_sheet.update_attributes(params[:preference_sheet])
        format.html { redirect_to action: 'edit' }
        format.xml  { head :ok }
      else
        format.html { render :action => "edit" }
        format.xml  { render :xml => @preference_sheet.errors, :status => :unprocessable_entity }
      end
    end
  end

  protected
    def load_preference_sheet
      @preference_sheet = current_user.preference_sheet
    end
end
