= form_tag(report_path) do |f|
  .field
    %input#daterange(name='daterange' value="#{@report.from}to#{@report.to}")
    #daterangepicker
    %br
    =submit_tag 'Generate', :class => 'btn btn-success'
%hr
- content_for :page_title do
  Summary report

- content_for :tabs do
  %li
    %a{"data-toggle" => "tab", :href => "#sync"} Sync

.tab-pane.active#main
  %h3
    total pivotal: #{ @report.pivota_user_total_count }
    %br/
    total private: #{ @report.private_user_total_count }
    %br/
    invitations c-a-d: #{@report.invitations_count}-#{@report.invitations_accepted_count}-#{@report.invitations_declined_count}
    %br/
    #active_teams_report(style="margin-top:2em")

.tab-pane#sync
  = render partial: 'sync_reports'

- content_for :js do
  - @report.graph_reports.each do |graph|
    :javascript
      $(document).ready(function(){
        var points = #{graph.points.to_json};
        var days = #{@report.days.collect{|x| x.strftime('%e') }.to_json};

        var options = {
          width: 900,
          height: 300,
          fill: true,
          color:['#62C462'],
          y_labels_number: 6,
          y_labels_position: 'outside',
          y_labels_spacing: 20,
          leftgutter: 50,
          rightgutter: 50,
          bottomgutter: 20,
          topgutter: 20
        }
        var r = Raphael('#{graph.id}', options.width, options.height);
        r.raphalytics([points], days, [], options);
      });

