  = accordion_div 'sprints', 'icon-signal', "Active sprints", false, '' do
    = carousel :id => 'sprint-carousel', :slide => true do
      - @sprints.each_slice(3).each_with_index do |sprints, i|
        - if i == 0
          .item.active
            .span11
              - sprints.each do |sprint|
                = sprint_widget sprint, :class => 'span4 widget'
        - else
          .item
            .span11
              - sprints.each do |sprint|
                = sprint_widget sprint, :class => 'span4 widget'
- if @teams.any?
  = accordion_div 'teams', 'icon-flag', 'teams', false, '' do
    = carousel :id => 'teams-carousel', :slide => true do
      - @teams.each_slice(3).each_with_index do |teams, i|
        - if i == 0
          .item.active
            .span11
              - teams.each do |team|
                = team_widget team
        - else
          .item
            .span11
              - teams.each do |team|
                = team_widget team

- if brand_new_account?
  - modal id: 'tutorial', title: 'Welcome to burndown-charts!', button: 'Thanks' do
    %h4 Take a look at the sample data
    %p We created a team, an active sprint and two completed sprints. It will give you an insight on what your data would look like. You can delete the team by removing yourself (and any other user) from it.
    - if current_user.is_a? PivotalUser
