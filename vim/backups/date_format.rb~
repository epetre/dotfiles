Date::DATE_FORMATS[:default] = '%m/%d/%Y'
Time::DATE_FORMATS[:default] = '%m/%d/%Y %H:%M'

class Date
  class << self
	  def datepicker_parse(str, sg = nil)
	    Date.strptime(str, Date::DATE_FORMATS[:default])
	  end
  end

  def to_db_format
    strftime("%Y-%m-%d")
  end

  def as_json(options = nil) #:nodoc:
		strftime(Date::DATE_FORMATS[:default])
  end
end
